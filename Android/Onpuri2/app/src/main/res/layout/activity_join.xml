<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background_material_light"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <TextView
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="사용자 등록"
        android:id="@+id/tv_new"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center_vertical" />

    <LinearLayout
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="20dp"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_width="80dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="사용자 ID"
                android:id="@+id/tv_newId"
                android:textSize="16dp"
                android:layout_gravity="center_vertical"
                android:singleLine="true" />
            <EditText
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="16dp"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:maxLength="10"
                android:id="@+id/et_newId"
                android:layout_gravity="center_vertical"
                android:inputType="none"
                android:singleLine="true"
                android:background="@drawable/btn_border_black" />
            <Button
                android:textSize="15dp"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:textColor="@color/black"
                android:text="Check"
                android:id="@+id/btnCheck"
                android:clickable="true"
                android:onClick="onClick"
                android:layout_gravity="center_vertical|right"
                android:background="@color/fuzzy_peach"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:maxLength="15"
            android:text=""
            android:textColor="@color/dark_gray"
            android:id="@+id/tv_compareId"
            android:textSize="14dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:maxLength="15"
            android:textColor="@color/black"
            android:text="패스워드"
            android:id="@+id/tv_newPw"
            android:textSize="16dp"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16dp"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:id="@+id/et_newPw"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:password="true"
            android:imeOptions="actionSearch"
            android:background="@drawable/btn_border_black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:textColor="@color/black"
                android:text="재입력"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="16dp"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_border_black"
                android:id="@+id/et_comparePw"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:phoneNumber="false"
                android:password="true"
                android:imeOptions="actionSearch"/>
        </LinearLayout>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:maxLength="15"
            android:text=""
            android:textColor="@color/dark_gray"
            android:id="@+id/tv_comparePw"
            android:textSize="14dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="16dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:maxLength="15"
            android:textColor="@color/black"
            android:text="실명"
            android:id="@+id/tv_newName"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16dp"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_border_black"
            android:id="@+id/et_newName"
            android:layout_gravity="center_vertical"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="16dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="핸드폰"
            android:id="@+id/tv_newPhone"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16dp"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_border_black"
            android:id="@+id/et_newPhone1"
            android:singleLine="true"
            android:maxLength="3"
            android:layout_gravity="center_vertical"
            android:inputType="number" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="15"
            android:text="-"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />
        <EditText
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16dp"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_border_black"
            android:id="@+id/et_newPhone2"
            android:singleLine="true"
            android:maxLength="4"
            android:layout_gravity="center_vertical"
            android:inputType="number" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="15"
            android:text="-"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />
        <EditText
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16dp"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_border_black"
            android:id="@+id/et_newPhone3"
            android:singleLine="true"
            android:maxLength="4"
            android:layout_gravity="center_vertical"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:gravity="center">
        <Button
            android:textSize="15dp"
            android:background="@drawable/btn_clilcked"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:text="JOIN"
            android:id="@+id/btnJoin"
            android:clickable="true"
            android:textColor="@color/black"/>
        <Button
            android:id="@+id/btnJoinCancel"
            android:textSize="15dp"
            android:background="@drawable/btn_clilcked"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:text="CANCEL"
            android:clickable="true"
            android:textColor="@color/black" />
    </LinearLayout>
</LinearLayout>