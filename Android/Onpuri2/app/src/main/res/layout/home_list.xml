<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/card_view"
    android:layout_marginBottom="3dp"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@color/fuzzy_peach"
    android:layout_height="65dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:weightSum="1">

        <TextView
            android:textSize="18dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:maxLines="2"
            android:id="@+id/tv_sen_item"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="영어 문장"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:gravity="left">

                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:id="@+id/id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginLeft="3dp"
                    android:layout_alignParentLeft="true"
                    android:gravity="left" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="13dp"
                    android:id="@+id/imageView2"
                    android:background="@drawable/translation_icon"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:id="@+id/transcount"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginLeft="3dp"
                    android:gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="13dp"
                    android:id="@+id/imageView3"
                    android:background="@drawable/listen_icon" />

                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:id="@+id/listencount"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="3dp"
                    android:textIsSelectable="false" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:id="@+id/imageView4"
                    android:background="@drawable/reco_icon"
                    android:adjustViewBounds="true" />

                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:id="@+id/recocount"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="3dp"
                    android:textIsSelectable="false" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>