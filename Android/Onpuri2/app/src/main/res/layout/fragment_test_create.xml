<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.onpuri.Activity.TestCreateFragment"
    android:background="@color/background_material_light"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/fuzzy_peach"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="시험 만들기"
        android:id="@+id/textView"
        android:textSize="18dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:textColor="@color/black" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical">
        <TextView
            android:textSize="16dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:maxLength="15"
            android:textColor="@color/black"
            android:text="제목"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16dp"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_border_black"
            android:id="@+id/et_test_name"
            android:layout_gravity="center_vertical"
            android:singleLine="true"/>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical">
        <TextView
            android:textSize="16dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:maxLength="15"
            android:textColor="@color/black"
            android:text="분류"
            android:layout_gravity="center_vertical"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:checkedButton="@+id/radio_word">
            <RadioButton
                android:buttonTint="@color/fuzzy_peach"
                android:layout_marginRight="20dp"
                android:id="@+id/radio_word"
                android:text = "단어"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:buttonTint="@color/fuzzy_peach"
                android:id="@+id/radio_sen"
                android:text = "문장"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>
    </LinearLayout>


    <!--단어 출제 방법-->
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/ll_word_kinds"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:maxLength="15"
            android:textColor="@color/black"
            android:text="문제 유형" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:checkedButton="@+id/radio_word_spelling">
            <RadioButton
                android:buttonTint="@color/fuzzy_peach"
                android:id="@+id/radio_word_spelling"
                android:text = "영어단어 맞히기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:buttonTint="@color/fuzzy_peach"
                android:id="@+id/radio_word_mean"
                android:text = "뜻 맞히기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>
    </LinearLayout>


    <!--문장 출제 방법-->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_sen_kinds"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:maxLength="15"
            android:textColor="@color/black"
            android:text="분류" />

        <RadioButton
            android:buttonTint="@color/fuzzy_peach"
            android:id="@+id/radio_sen_blank"
            android:checked="true"
            android:text = "문장 빈칸 맞히기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical">
        <TextView
            android:textSize="16dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:maxLength="15"
            android:textColor="@color/black"
            android:text="응시 대상 "
            android:layout_gravity="center_vertical"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:checkedButton="@+id/radio_every">
            <RadioButton
                android:buttonTint="@color/fuzzy_peach"
                android:layout_marginRight="20dp"
                android:id="@+id/radio_every"
                android:text = "전체"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:buttonTint="@color/fuzzy_peach"
                android:id="@+id/radio_select"
                android:text = "지정"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical">
        <TextView
            android:textSize="16dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:maxLength="15"
            android:textColor="@color/black"
            android:text="문제 수"
            android:layout_gravity="center_vertical"/>

        <com.hrules.horizontalnumberpicker.HorizontalNumberPicker
            android:id="@+id/horizontal_number_picker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

</LinearLayout>
