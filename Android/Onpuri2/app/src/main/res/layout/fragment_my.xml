<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.UserMyFragment"
    android:background="@color/background_material_light"
    android:gravity="center"
    android:weightSum="1">
    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="아이디 "
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:maxLength="15"
            android:text=""
            android:id="@+id/tv_userID"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:background="@drawable/btn_border_black"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="이름 "
            android:textColor="#030809"
            android:textSize="16dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:maxLength="15"
            android:text=""
            android:id="@+id/tv_userName"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:background="@drawable/btn_border_black"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="가입일 "
            android:textColor="#030809"
            android:textSize="16dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text=""
            android:id="@+id/tv_userDate"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:background="@drawable/btn_border_black"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_width="fill_parent"
        android:gravity="center_vertical"
        android:layout_height="50dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="휴대전화"
            android:textColor="#030809"
            android:textSize="16dp"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:gravity="center_vertical"
            android:id="@+id/et_userPhone"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:inputType="phone"
            android:textSize="16dp"
            android:maxLength="15"
            android:textColor="@color/black"
            android:background="@drawable/btn_border_black"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text = ""/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="현재비밀번호"
            android:textColor="#030809"
            android:textSize="16dp"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:gravity="center_vertical"
            android:id="@+id/et_now_pass"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text = ""
            android:inputType="textPassword"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:background="@drawable/btn_border_black"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="새 비밀번호"
            android:textColor="#030809"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:gravity="center_vertical"
            android:id="@+id/et_new_pass"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text = ""
            android:inputType="textPassword"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:background="@drawable/btn_border_black"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:maxLength="15"
            android:text="확인"
            android:textColor="#030809"
            android:textSize="16dp"
            android:layout_gravity="center"
            />
        <EditText
            android:gravity="center_vertical"
            android:id="@+id/et_new_pass_check"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text = ""
            android:inputType="textPassword"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:background="@drawable/btn_border_black"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:gravity="center">
        <Button
            android:textSize="16dp"
            android:background="@drawable/btn_clilcked"
            android:id = "@+id/btn_my_ok"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="변경"
            android:textColor="@color/black"
            android:onClick="onClick"
            android:layout_marginRight="5dp" />
        <Button
            android:textSize="16dp"
            android:background="@drawable/btn_clilcked"
            android:layout_marginLeft="5dp"
            android:id = "@+id/btn_my_cancel"
            android:textColor="@color/black"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="취소"
            android:onClick="onClick"/>

    </LinearLayout>

</LinearLayout>
