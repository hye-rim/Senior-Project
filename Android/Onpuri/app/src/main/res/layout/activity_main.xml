<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
               android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity"
              android:background="#ff000000"
              android:weightSum="1">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="15"
            android:text="사용자 : "
            android:id="@+id/tv_mainID"
            android:textColor="#ffffffff"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:maxLength="15"
            android:text=""
            android:id="@+id/tv_userID"
            android:textColor="#ffffffff"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"/>

        <Space
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.00"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:text="보유 쉘 : "
                android:id="@+id/tv_mainShell"
                android:textColor="#ffffffff"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:text=""
                android:id="@+id/tv_userShell"
                android:textColor="#ffffffff"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>

            <Space
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.00"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:text="보유 문제 수 : "
                android:id="@+id/tv_mainProblem"
                android:textColor="#ffffffff"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:text=""
                android:id="@+id/tv_userProblem"
                android:textColor="#ffffffff"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>

            <Space
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.00"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:text="학습 레벨"
                android:textColor="#ffffffff"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:text="* 평균점수 : "
                android:textColor="#ffffffff"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:text=""
                android:id="@+id/tv_userAverage"
                android:textColor="#ffffffff"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>

            <Space
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.00"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:text="* 랭킹 : "
                android:textColor="#ffffffff"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:text=""
                android:id="@+id/tv_userRank"
                android:textColor="#ffffffff"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>

            <Space
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.00"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:text="학습 경험치"
                android:textColor="#ffffffff"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:text="* 출제문제수 : "
                android:textColor="#ffffffff"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:text=""
                android:id="@+id/tv_userQuestion"
                android:textColor="#ffffffff"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>

            <Space
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.00"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:text="* 풀이문제수 : "
                android:textColor="#ffffffff"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:text=""
                android:id="@+id/tv_userSolving"
                android:textColor="#ffffffff"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>

            <Space
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.00"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:text="* 시험참가횟수 : "
                android:textColor="#ffffffff"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:text=""
                android:id="@+id/tv_userAttend"
                android:textColor="#ffffffff"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>

            <Space
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.00"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:text="거래 경험치"
                android:textColor="#ffffffff"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:text="* 매수 : "
                android:textColor="#ffffffff"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:text=""
                android:id="@+id/tv_userPurchase"
                android:textColor="#ffffffff"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>

            <Space
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.00"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:text="* 매도 : "
                android:textColor="#ffffffff"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:text=""
                android:id="@+id/tv_userSale"
                android:textColor="#ffffffff"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>

            <Space
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.00"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:text="* 신고 : "
                android:textColor="#ffffffff"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:text=""
                android:id="@+id/tv_userDeclaration"
                android:textColor="#ffffffff"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>

            <Space
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.00"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center_horizontal">
        <Button
            android:id = "@+id/btnOk"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="확인"
            android:onClick="onClick"
            android:textColor="#ffffff"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:textStyle="bold" />

    </RelativeLayout>
</LinearLayout>
