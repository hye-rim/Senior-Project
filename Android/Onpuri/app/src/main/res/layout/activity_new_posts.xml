<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#faf5b3"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp">
        <Button
            android:text = "텍스트"
            android:id="@+id/btnNewText"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="#ffaa78"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="15dp"
            android:onClick="onClick"/>
        <Button
            android:text = "앨범"
            android:id="@+id/btnNewGallery"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="#ffaa78"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="15dp"
            android:onClick="onClick"/>
        <Button
            android:onClick="onClick"
            android:text = "카메라"
            android:id="@+id/btnNewCamera"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="#ffaa78"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.80"
        android:gravity="center_horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageViewtest
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:id="@+id/iv_new" />
            <SurfaceView
                android:id="@+id/surface_view"
                android:layout_gravity="center"
                android:layout_height="100px"
                android:layout_width="160px"
                android:layout_marginLeft="110dp"
                android:layout_marginRight="110dp" />
           </RelativeLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:id="@+id/et_newPostPro"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#f5f5f5"
                android:hint = "문제를 입력하세요."/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#f5f5f5">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/et_newPostQue"
                android:background="#f5f5f5"
                android:hint="질문을 입력하세요."/>

        </ScrollView>
    </LinearLayout>
</LinearLayout>